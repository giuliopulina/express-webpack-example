<assembly>
    <id>bundle</id>
    <formats>
        <format>zip</format>
    </formats>
	<includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- add some files -->
        <fileSet>
            <directory>./</directory>
            <outputDirectory>./</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
			<excludes>
				<exclude>pom.xml</exclude>
				<exclude>descriptor.xml</exclude>
				<exclude>.env</exclude>
				<exclude>.env.local</exclude>
				<exclude>target/**</exclude>
				<exclude>.git/**</exclude>
			</excludes>
        </fileSet>
    </fileSets>
</assembly>